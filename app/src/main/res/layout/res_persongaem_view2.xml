<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="25dp"
    android:background="@color/black"

    >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_Personagem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        app:srcCompat="@drawable/elza_icon"
        app:shapeAppearance="@style/roundImagview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:text="NOME"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/img_Personagem"
        app:layout_constraintStart_toEndOf="@+id/img_Personagem"
        />

    <TextView
        android:id="@+id/filme_Personagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILME"
        android:textColor="@color/white"

        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/nome"
        app:layout_constraintStart_toEndOf="@+id/img_Personagem"

        />


</androidx.constraintlayout.widget.ConstraintLayout>